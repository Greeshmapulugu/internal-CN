#include <stdio.h>
#define INF 9999
#define MAX 100
int main() {
    int n, g[MAX][MAX], s;
    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix (use %d for no edge):\n", INF);
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &g[i][j]);
    printf("Enter source vertex (0 to %d): ", n - 1);
    scanf("%d", &s);
void dijkstra(int n, int g[MAX][MAX], int s) {
    int dist[MAX], vis[MAX] = {0}, i, j, u, min;

    for (i = 0; i < n; i++) dist[i] = g[s][i];
    dist[s] = 0; vis[s] = 1;

    for (int c = 1; c < n; c++) {
        min = INF;
        for (i = 0; i < n; i++)
            if (!vis[i] && dist[i] < min) min = dist[u = i];

        vis[u] = 1;
        for (j = 0; j < n; j++)
            if (!vis[j] && g[u][j] != INF && dist[u] + g[u][j] < dist[j])
                dist[j] = dist[u] + g[u][j];
    }

    printf("\nShortest distances from vertex %d:\n", s);
    for (i = 0; i < n; i++)
        printf("To %d : %d\n", i, dist[i]);
}

    dijkstra(n, g, s);
    return 0;
} explaination of thiscode line to line just like explaining to theone who dont have basic knowledge
