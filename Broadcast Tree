#include <stdio.h>
#define MAX 20
#define INF 9999

int main() {
    int n, g[MAX][MAX], vis[MAX] = {0};
    int i, j, u, v, min, edges = 0, cost = 0;

    printf("Enter number of hosts (nodes): ");
    scanf("%d", &n);

    printf("Enter adjacency matrix (0 for self, %d for no link):\n", INF);
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            scanf("%d", &g[i][j]);

    vis[0] = 1; // Start from node 0
    printf("\nEdges in the Broadcast (Spanning) Tree:\n");

    while (edges < n - 1) {
        min = INF;
        for (i = 0; i < n; i++)
            if (vis[i])
                for (j = 0; j < n; j++)
                    if (!vis[j] && g[i][j] < min && g[i][j])
                        min = g[u = i][v = j];

        printf("Host %d - Host %d : Cost = %d\n", u, v, min);
        vis[v] = 1;
        cost += min;
        edges++;
    }

    printf("Total cost of Broadcast Tree: %d\n", cost);
    return 0;
} explaination of thiscode line to line just like explaining to theone who dont have basic knowledge 
