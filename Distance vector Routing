#include <stdio.h>
#define MAX 10
#define INF 9999

int main() {
    int n, i, j, k, change, cost[MAX][MAX], via[MAX][MAX];

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    printf("Enter cost matrix (%d for no link):\n", INF);
    for(i = 0; i < n; i++)
        for(j = 0; j < n; j++) {
            scanf("%d", &cost[i][j]);
            if(i != j && cost[i][j] == 0) cost[i][j] = INF;
            via[i][j] = j;
        }

    // Distance Vector Algorithm
    do {
        change = 0;
        for(i = 0; i < n; i++)
            for(j = 0; j < n; j++)
                for(k = 0; k < n; k++)
                    if(cost[i][j] > cost[i][k] + cost[k][j]) {
                        cost[i][j] = cost[i][k] + cost[k][j];
                        via[i][j] = via[i][k];
                        change = 1;
                    }
    } while(change);

    // Display
    for(i = 0; i < n; i++) {
        printf("\nRouting table for node %d:\n", i);
        printf("Dest\tNextHop\tCost\n");
        for(j = 0; j < n; j++)
            printf("%d\t%s\t%d\n", j, (i==j) ? "-" : (char[2]){via[i][j]+'0', '\0'}, (i==j)?0:cost[i][j]);
    }

    return 0;
}  explaination of thiscode line to line just like explaining to theone who dont have basic knowledge
